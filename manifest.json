{
  "manifest_version": 3,
  "name": "Adult Domain Detector (AI)",
  "version": "1.2.0",
  "description": "Detects adult websites or adult-related content in extension descriptions using local rules and AI.",

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.groq.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Adult Domain Detector"
  },

  "icons": {
    "128": "assets/icon.png"
  }
}
